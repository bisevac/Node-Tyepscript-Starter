{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "./dist",
      "target": "es2016",
      "lib": [
        "es2016"
      ],
      "typeRoots": [
        "./node_modules/@types"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "declaration": false,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators":true
    },
    "include": [
      "./src/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "./public",
      "dist",
      "test"
    ]
  }